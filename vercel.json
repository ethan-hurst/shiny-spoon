{
  "crons": [
    {
      "path": "/api/cron/sync/every-5-min",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/sync/every-15-min",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/sync/every-30-min",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/sync/hourly",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/sync/daily",
      "schedule": "0 0 * * *"
    },
    {
      "path": "/api/cron/sync/weekly",
      "schedule": "0 0 * * 0"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/health-check",
      "schedule": "*/10 * * * *"
    },
    {
      "path": "/api/cron/accuracy",
      "schedule": "*/15 * * * *"
    },
    {
      "path": "/api/cron/security-monitor",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/performance-cleanup",
      "schedule": "0 3 * * *"
    }
  ],
  "functions": {
    "app/api/cron/sync/[frequency]/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/cleanup/route.ts": {
      "maxDuration": 60
    },
    "app/api/cron/health-check/route.ts": {
      "maxDuration": 30
    },
    "app/api/cron/accuracy/route.ts": {
      "maxDuration": 300
    },
    "app/api/cron/security-monitor/route.ts": {
      "maxDuration": 120
    },
    "app/api/cron/performance-cleanup/route.ts": {
      "maxDuration": 60
    },
    "app/api/bulk/upload/route.ts": {
      "maxDuration": 300
    },
    "app/api/monitoring/performance/route.ts": {
      "maxDuration": 30
    },
    "app/api/monitoring/alerts/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/api/health",
      "destination": "/api/cron/health-check",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/api/docs",
      "destination": "/api/docs/index"
    }
  ]
}
