# Authentication
NEXT_PUBLIC_AUTH_ENABLED=true
NEXT_PUBLIC_AUTH_PROVIDER=supabase

# Supabase Configuration

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=

# Database URLs (if using external database)
DATABASE_URL= # Set this to the Transaction connection pooler string
DIRECT_URL= # Set this to the Session connection pooler string

# Upstash Redis (for rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Service
NEXT_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# Analytics (optional)
NEXT_PUBLIC_GA_ID=

# Stripe (for payments)
NEXT_PUBLIC_PAYMENTS_ENABLED=false
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=
NEXT_PUBLIC_STRIPE_PRICE_ID=

# OpenAI (for AI features in Phase 5)
OPENAI_API_KEY=

# Email Service (Optional - defaults to console logging)
# Options: console, resend, sendgrid, ses
EMAIL_PROVIDER=console
RESEND_API_KEY=